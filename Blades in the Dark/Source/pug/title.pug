//- Title & Version
.topholder.flex
	.type-selector.sheet-label
		input.hidden.threewaybox(type="checkbox", name="attr_sheet_type", value="faction")
		input.threewaybox(type="radio", name="attr_sheet_type", value="character", checked)
		input.threewaybox(type="radio", name="attr_sheet_type", value="crew")
		input.threewaybox(type="radio", name="attr_sheet_type", value="faction")
		span(data-i18n="character_mode")
		span(data-i18n="crew_mode")
		span(data-i18n="faction_mode")
	label.settings-checkbox
		+checkbox("show_settings") y
	.version
		span.version-text(data-i18n="version")
		span(name="attr_version")
+hidden-input("show_settings")(value="0").hider
.settings
	.setting-char.generaterow
