					span(data-i18n='sidekick-move7.2')
				li
					span(data-i18n='sidekick-move7.3')
					button.sheet-2d6-button(type='roll', value='&{template:motw-dieroll} {{CharName=@{character_name}}} {{title=Eek!}} {{Roll=[[2d6+?{Eek! with|Sharp (Default),@{Sharp}|Charm,@{Charm}|Cool,@{Cool}|Sharp,@{Sharp}|Tough,@{Tough}|Weird,@{Weird}}+?{+/- forward?|0}]]}}', name='roll_eek')
