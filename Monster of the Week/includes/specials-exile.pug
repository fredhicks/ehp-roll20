.sheet-Exile.sheet-Origin-Exile
	.sheet-Subsection
		span(data-i18n='exile-origin') Origin
	input.sheet-checkbox.sheet-ExpToggle(type='checkbox', name='attr_Toggle-Exile-Origin-All', value='1', checked='')
	span.sheet-anglebox
	span.sheet-ExpHeader
		span(data-i18n='all') All
