	input.sheet-triggerbox(type='checkbox', name='attr_HJ-Exile-Enable', value="1")
	.sheet-space-above.sheet-triggerframe
		div
			b
				+translate("Future Traveller Gear Options")
		div
			+t("In place of one ancient weapons pick, you may choose one of these:")
